<?xml version="1.0" encoding="utf-8"?>

<ScrollView

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:fillViewport="true"
    tools:context=".features.registrar.RegistrarComponente">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:scrollbarAlwaysDrawVerticalTrack="true"
        android:scrollbarStyle="insideInset"
        android:scrollbars="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <LinearLayout
            android:id="@+id/registroBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/NomeComponenteTitulo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:layout_marginBottom="8dp"
                android:text="Registrar novo componente"
                android:textColor="@color/laranja"
                android:textSize="24sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="32dp"
            android:text="Nome"
            android:textColor="@color/laranja"
            android:textSize="24sp" />

        <EditText
            android:id="@+id/editTextComponenteNameRegistro2"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="8dp"
            android:layout_marginRight="16dp"
            android:drawableEnd="@drawable/ic_icon_open_pencil"
            android:hint="Digite o nome aqui"
            android:inputType="textPersonName"
            android:text="Name" />


        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="32dp"
            android:text="Descrição"
            android:textColor="@color/laranja"
            android:textSize="24sp" />

        <EditText
            android:id="@+id/editTextComponenteDescricaoRegistro2"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="8dp"
            android:layout_marginRight="16dp"
            android:drawableEnd="@drawable/ic_icon_open_pencil"
            android:hint="Digite a descrição aqui"
            android:inputType="textPersonName"
            android:text="Name" />


        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="32dp"
            android:text="Pino"
            android:textColor="@color/laranja"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/txtPinoEscolhidoRegistar2"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="8dp"
            android:layout_marginRight="16dp"
            android:drawableEnd="@drawable/ic_icon_ionic_md_menu"
            android:paddingRight="16dp" />

        <ListView
            android:id="@+id/list_Pinos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="32dp"
            android:text="Tipo"
            android:textColor="@color/laranja"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/txtTipoComponenteRegistrar"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="8dp"
            android:layout_marginRight="16dp"
            android:drawableEnd="@drawable/ic_icon_ionic_md_menu"
            android:paddingRight="16dp" />

        <ListView
            android:id="@+id/list_Tipo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone">

        </ListView>

        <LinearLayout
            android:id="@+id/barraConfirma"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/btnSairRegistrar2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                app:srcCompat="@drawable/ic_icon_awesome_times" />

            <ImageView
                android:id="@+id/btnOnOffLed"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="230dp"
                app:srcCompat="@drawable/ic_icon_awesome_check" />
        </LinearLayout>

    </LinearLayout>
</ScrollView>
